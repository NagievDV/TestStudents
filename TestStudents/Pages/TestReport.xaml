<Page x:Class="TestStudents.Pages.TestReport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestStudents.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestReport">

    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Label Content="ID тестирования:"/>
            <TextBox Name="SearchTextBox" Width="200" Margin="0,0,10,0"/>
            <Button Content="Поиск" Width="100" Click="SearchButton_Click"/>
        </StackPanel>

        <StackPanel Margin="0,40,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Общая информация о тесте" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Номер студента:" FontWeight="Bold"/>
                <TextBlock Name="StudentNumberText" Margin="0,0,0,10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Дата тестирования:" FontWeight="Bold"/>
                <TextBlock Name="TestDateText" Margin="0,0,0,10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Продолжительность (мин):" FontWeight="Bold"/>
                <TextBlock Name="TestDurationText" Margin="0,0,0,10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Всего вопросов:" FontWeight="Bold"/>
                <TextBlock Name="TotalQuestionsText" Margin="0,0,0,10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Количество правильных ответов:" FontWeight="Bold"/>
                <TextBlock Name="CorrectAnswersText" Margin="0,0,0,10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Оценка:" FontWeight="Bold"/>
                <TextBlock Name="GradeText" Margin="0,0,0,10"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
